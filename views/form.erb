<style type="text/css">
    body{
            background-color: #444;
        }
    *{
        margin: 0;
        padding: 0;
        list-style:none;
        font-family: Verdana;
    }
    .wrap{
        text-align: center;
        margin: 220px auto;
    }
    .wrap h3{
        font-size: 40px;
        margin-bottom: 40px;
        line-height: 60px;
        color: #fff;
    }
    form label .keyword{
        width: 500px;
        height: 32px;
        border-radius: 40px;
        display: inline-block;
        color: #444;
        text-align: center;
        font-size: 20px;
    }
    .shop_selection input{
        display: none;
    }
    .shop_selection span{
        display: inline-block;
        line-height: 30px;
        /*width: 80px;*/
        padding: 5px 10px;
        border: 1px solid #fff;
        margin-bottom: 20px;
        border-radius: 10px;
        color: #fff;
    }
    .shop_selection input:checked +span{
        color: #444;
        border:1px solid #ccc;
        background-color: #fff;
    }
    .shop_selection .all input:checked +span{
        color: #444;
        border:1px solid #ccc;
        background-color: #fff;
    }

    .row{
        margin-top: 50px;
    }
    .btn{
        width: 80px;
        height: 30px;
        color: #444;
        border-radius: 5px;
    }
</style>

<div class="wrap">
    <h3>longlong-Search</h3>
           
    <form action="/result" method="get">
        <div class="shop_selection">
            <label class="shop"><input type="checkbox" value="momo" name="shop_m" ><span>momo商城</span></label>
            <label class="shop"><input type="checkbox" value="yahoo" name="shop_y" ><span>yahoo購物中心</span></label>
            <label class="shop"><input type="checkbox" value="raku" name="shop_r" ><span>樂天市場</span></label>
            <label class="shop"><input type="checkbox" value="shopee" name="shop_s" ><span>蝦皮拍賣</span></label>
            <label class="shop"><input type="checkbox" value="all" name="shop_all" ><span>all</span></label>
        </div>
        <label><input type="text" name="keyword" placeholder="請輸入關鍵字" class="keyword"></label> 


        <div class="row">
            <input type="submit" name="" value="送出" class="btn"> 
            <input type="reset" value="清空" class="btn">
        </div>
    </form>
</div>